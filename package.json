{
  "name": "cred-mgr",
  "private": false,
  "version": "1.0.0",
  "engines": {
    "node": ">10.0.0"
  },
  "description": "Manage credentials using local key store",
  "main": "src/creds-mgr.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:Rolias/creds-mgr.git"
  },
  "scripts": {
    "start": "node main.js",
    "build": "run-p security-check lint:watch test:watch",
    "security-check": "npm audit",
    "lint": "esw src --color",
    "lint:watch": "npm run lint -- --watch",
    "test": "mocha --use_strict  main.test.js 'src/**/*.test.js'",
    "test:watch": "npm run test -- --watch --reporter min ",
    "test:cov": "nyc mocha main.test.js -- --forbid-only 'src/**/*.test.js' ",
    "watch": "run-p lint:watch test:watch",
    "doc": "jsdoc -c ./jsdoc.config.json src/*.js src/**/*.js ./ReadMe.md"
  },
  "keywords": [
    "credentials",
    "api",
    "security",
    "keychain"
  ],
  "author": "Tod Gentille",
  "license": "MIT",
  "dependencies": {
    "inquirer": "^6.2.2",
    "keytar": "^4.4.1",
    "winston": "x"
  },
  "devDependencies": {
    "@types/node": "^11.11.3",
    "chai": "x",
    "eslint": "x",
    "eslint-watch": "x",
    "jsdoc": "^3.5.5",
    "mocha": "x",
    "nodemon": "^1.18.10",
    "npm-run-all": "x",
    "nyc": "x",
    "sinon": "x"
  }
}